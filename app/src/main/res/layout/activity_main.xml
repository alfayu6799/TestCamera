<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/imageShow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/startBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:src="@drawable/ic_camera_alt_white_80dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/showPermissionMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="20dp"
        android:text="permission_message"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/delBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_delete_white_48dp"
        android:layout_marginLeft="50dp"
        android:layout_gravity="bottom"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/saveBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:src="@mipmap/icon_ocr"
        android:layout_marginLeft="225dp"
        android:layout_gravity="bottom"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/flashBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_flash_off_white_48dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="10dp"
        android:visibility="gone"/>

    <SeekBar
        android:id="@+id/exposueSkb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="14"
        android:layout_gravity="bottom"
        android:layout_marginBottom="100dp"
        android:visibility="gone"/>

</FrameLayout>